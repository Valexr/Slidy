{
    "name": "slidy",
    "version": "3.0.4",
    "description": "SLIDY - simple, configurable & reusable carousel component",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "node esbuild --dev",
        "dev:www": "pnpm dev --parallel --filter=slidy...",
        "dev:core": "pnpm dev:core --parallel",
        "dev:svelte": "pnpm dev:svelte --parallel",
        "build": "node esbuild",
        "build:www": "pnpm build -r",
        "build:core": "pnpm build --filter=@slidy/core",
        "build:svelte": "pnpm build --filter=@slidy/svelte",
        "start": "npx derver --production --port=5555 www/public",
        "deploy": "pnpm build:www && gh-pages -d www/public",
        "pub": "pnpm pub -r"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Svelte",
        "Malina",
        "React",
        "Vue",
        "WebComponent",
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/slidy",
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": false,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "devDependencies": {
        "@slidy/svelte": "workspace:*",
        "derver": "^0.5.3",
        "esbuild": "^0.14.17",
        "esbuild-svelte": "^0.6.2",
        "gh-pages": "^3.2.3",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.6.0",
        "sass": "^1.49.7",
        "svelte": "^3.46.3",
        "svelte-preprocess": "^4.10.2"
    }
}