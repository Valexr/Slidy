{
    "name": "svelte-slidy",
    "version": "2.8.0",
    "description": "SLIDY - simple, configurable & reusable carousel component built with SvelteJS",
    "main": "dist/slidy.js",
    "module": "dist/slidy.mjs",
    "svelte": "src/index.js",
    "scripts": {
        "build": "node esbuild",
        "dev": "node esbuild --dev",
        "start": "npx derver --production --port=5000 www/public",
        "predeploy": "node esbuild",
        "deploy": "echo 'slidy.valexr.online' > ./www/public/CNAME && gh-pages -d www/public",
        "prepublishOnly": "node esbuild"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Valexr/svelte-slidy.git"
    },
    "keywords": [
        "Svelte",
        "SvelteJs",
        "Carousel",
        "Svelte-plugin"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/svelte-slidy/issues"
    },
    "homepage": "https://slidy.valexr.online",
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": false,
        "svelteBracketNewLine": true,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "devDependencies": {
        "derver": "^0.5.3",
        "esbuild": "^0.14.5",
        "esbuild-svelte": "^0.6.0",
        "gh-pages": "^3.2.3",
        "sass": "^1.45.0",
        "svelte": "^3.44.3",
        "svelte-preprocess": "^4.10.0"
    },
    "peerDependencies": {
        "svelte": "^3.42.4"
    }
}