{
    "name": "slidy",
    "version": "3.0.0",
    "description": "SLIDY - simple, configurable & reusable carousel component",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "node esbuild --dev",
        "dev:www": "pnpm dev --parallel --filter=slidy...",
        "dev:core": "pnpm dev:core --parallel",
        "dev:svelte": "pnpm dev:svelte --parallel",
        "build": "node esbuild",
        "build:core": "pnpm build --filter=@slidy/core",
        "build:svelte": "pnpm build --filter=@slidy/svelte",
        "start": "npx derver --production --port=5555 www/public",
        "predeploy": "node esbuild --deploy",
        "deploy": "gh-pages -d www/public",
        "prepublishOnly": "node esbuild"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Svelte",
        "Malina",
        "React",
        "Vue",
        "WebComponent",
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://slidy.valexr.online",
    "devDependencies": {
        "derver": "^0.5.3",
        "esbuild": "^0.14.14",
        "esbuild-svelte": "^0.6.2",
        "gh-pages": "^3.2.3",
        "sass": "^1.49.0",
        "svelte": "^3.46.3",
        "svelte-preprocess": "^4.10.2",
        "@slidy/svelte": "workspace:*"
    }
}