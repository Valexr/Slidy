{
    "name": "slidy",
    "description": "Simple, configurable & reusable carousel",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:wc": "pnpm --filter=@slidy/wc... --parallel dev",
        "dev:vue": "pnpm --filter=@slidy/vue... --parallel dev",
        "dev:www": "pnpm --filter=@slidy/www... --parallel dev",
        "dev:core": "pnpm --filter=@slidy/core... --parallel dev:core",
        "dev:react": "pnpm --filter=@slidy/react... --parallel dev",
        "dev:solid": "pnpm --filter=@slidy/solid... --parallel dev",
        "dev:malina": "pnpm --filter=@slidy/malina... --parallel dev",
        "dev:svelte": "pnpm --filter=@slidy/svelte... --parallel dev:svelte",
        "dev:media": "pnpm --filter=@slidy/media dev",
        "build:wc": "pnpm --filter=@slidy/wc build",
        "build:vue": "pnpm --filter=@slidy/vue build",
        "build:www": "pnpm --filter=@slidy/www build",
        "build:core": "pnpm --filter=@slidy/core build",
        "build:react": "pnpm --filter=@slidy/react build",
        "build:solid": "pnpm --filter=@slidy/solid build",
        "build:malina": "pnpm --filter=@slidy/malina build",
        "build:svelte": "pnpm --filter=@slidy/svelte build",
        "build:media": "pnpm --filter=@slidy/media build",
        "format": "prettier --ignore-path .gitignore packages/svelte --write '**/*.{js,ts,md,json,html,css}'",
        "deploy": "pnpm build:www && gh-pages -d www/build",
        "pub": "pnpm -r pub",
        "pub:core": "pnpm --filter=@slidy/core pub"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Svelte",
        "Malina",
        "React",
        "Vue",
        "WebComponent",
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/Slidy",
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off"
        }
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 100,
        "singleQuote": true
    },
    "devDependencies": {
        "@types/eslint": "^8.4.2",
        "@types/node": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "derver": "^0.5.3",
        "esbuild": "^0.14.39",
        "esbuild-plugin-eslinter": "^0.1.2",
        "eslint": "^8.15.0",
        "gh-pages": "^3.2.3",
        "open-props": "^1.3.16",
        "prettier": "^2.6.2",
        "sass": "^1.51.0",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4"
    }
}
