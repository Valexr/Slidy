{
    "name": "slidy",
    "version": "3.0.5",
    "description": "Simple, configurable & reusable carousel",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:wc": "pnpm dev --filter=@slidy/wc... --parallel",
        "dev:vue": "pnpm dev --filter=@slidy/vue... --parallel",
        "dev:www": "pnpm dev --filter=@slidy/www... --parallel",
        "dev:core": "pnpm dev:core --filter=@slidy/core... --parallel",
        "dev:react": "pnpm dev --filter=@slidy/react... --parallel",
        "dev:solid": "pnpm dev --filter=@slidy/solid... --parallel",
        "dev:malina": "pnpm dev --filter=@slidy/malina... --parallel",
        "dev:svelte": "pnpm dev:svelte --filter=@slidy/svelte... --parallel",
        "dev:media": "pnpm dev --filter=@slidy/media",
        "build:wc": "pnpm build --filter=@slidy/wc",
        "build:vue": "pnpm build --filter=@slidy/vue",
        "build:www": "pnpm build --filter=@slidy/www",
        "build:core": "pnpm build --filter=@slidy/core",
        "build:react": "pnpm build --filter=@slidy/react",
        "build:solid": "pnpm build --filter=@slidy/solid",
        "build:malina": "pnpm build --filter=@slidy/malina",
        "build:svelte": "pnpm build --filter=@slidy/svelte",
        "build:media": "pnpm build --filter=@slidy/media",
        "format": "prettier --ignore-path .gitignore packages/svelte --write '**/*.{js,ts,md,json,html,css}'",
        "deploy": "pnpm build:www && gh-pages -d www/build",
        "pub": "pnpm pub -r"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Svelte",
        "Malina",
        "React",
        "Vue",
        "WebComponent",
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/Slidy",
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off"
        }
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": true,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "devDependencies": {
        "@types/eslint": "^8.4.1",
        "@types/node": "^17.0.27",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "derver": "^0.5.3",
        "esbuild": "^0.14.38",
        "esbuild-plugin-eslinter": "^0.1.2",
        "eslint": "^8.14.0",
        "gh-pages": "^3.2.3",
        "open-props": "^1.3.16",
        "prettier": "^2.6.2",
        "sass": "^1.51.0",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3"
    }
}