{
    "name": "slidy",
    "version": "3.0.5",
    "description": "Simple, configurable & reusable carousel",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:www": "pnpm dev --filter=@slidy/www... --parallel",
        "dev:core": "pnpm dev:core --parallel",
        "dev:svelte": "pnpm dev:svelte --parallel",
        "dev:react": "pnpm dev:react --parallel",
        "build:www": "pnpm build --filter=@slidy/www",
        "build:core": "pnpm build --filter=@slidy/core",
        "build:svelte": "pnpm build --filter=@slidy/svelte",
        "build:react": "pnpm build --filter=@slidy/react",
        "format": "prettier --ignore-path .gitignore packages/svelte --write '**/*.{js,ts,md,json,html,css}'",
        "start": "npx derver --production --port=5555 www/public",
        "deploy": "pnpm build:www && gh-pages -d www/public",
        "pub": "pnpm pub -r"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Svelte",
        "Malina",
        "React",
        "Vue",
        "WebComponent",
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/slidy",
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": true,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "devDependencies": {
        "derver": "^0.5.3",
        "esbuild": "^0.14.27",
        "esbuild-svelte": "^0.6.3",
        "gh-pages": "^3.2.3",
        "prettier": "^2.6.0",
        "prettier-plugin-svelte": "^2.6.0",
        "sass": "^1.49.9",
        "svelte": "^3.46.4",
        "svelte-preprocess": "^4.10.4",
        "tslib": "^2.3.1",
        "typescript": "^4.6.2"
    }
}