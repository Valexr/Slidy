{
    "name": "slidy",
    "description": "Sliding action script",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:core": "pnpm --filter=@slidy/core... --parallel dev:core",
        "dev:element": "pnpm --filter=@slidy/element... --parallel dev",
        "dev:svelte": "pnpm --filter=@slidy/svelte... --parallel dev:svelte",
        "dev:solid": "pnpm --filter=@slidy/solid... --parallel dev",
        "dev:react": "pnpm --filter=@slidy/react... --parallel dev",
        "dev:vue": "pnpm --filter=@slidy/vue... --parallel dev",
        "dev:www": "pnpm --filter=@slidy/www... --parallel dev",
        "dev:malina": "pnpm --filter=@slidy/malina... --parallel dev",
        "build:core": "pnpm --filter=@slidy/core build",
        "build:media": "pnpm --filter=@slidy/media build",
        "build:easing": "pnpm --filter=@slidy/easing build",
        "build:element": "pnpm --filter=@slidy/element... build",
        "build:animation": "pnpm --filter=@slidy/animation build",
        "build:plugins": "pnpm --filter=@slidy/plugins build",
        "build:svelte": "pnpm --filter=@slidy/svelte... build",
        "build:solid": "pnpm --filter=@slidy/solid... build",
        "build:react": "pnpm --filter=@slidy/react... build",
        "build:vue": "pnpm --filter=@slidy/vue... build",
        "build:www": "pnpm --filter=@slidy/www... build",
        "build:malina": "pnpm --filter=@slidy/malina... build",
        "build:all": "pnpm -r build",
        "pub:core": "pnpm --filter=@slidy/core pub",
        "pub:media": "pnpm --filter=@slidy/media pub",
        "pub:easing": "pnpm --filter=@slidy/easing pub",
        "pub:element": "pnpm --filter=@slidy/element pub",
        "pub:animation": "pnpm --filter=@slidy/animation pub",
        "pub:plugins": "pnpm --filter=@slidy/plugins pub",
        "pub:svelte": "pnpm --filter=@slidy/svelte pub",
        "pub:solid": "pnpm --filter=@slidy/solid pub",
        "pub:react": "pnpm --filter=@slidy/react pub",
        "pub:all": "pnpm -r pub",
        "format:all": "prettier --write '**/*.{js,ts,md,json,html,css,md}'",
        "lint:all": "eslint '**/src/**/*.{js,ts,svelte}'",
        "up:all": "pnpm up -r"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Valexr/Slidy.git"
    },
    "keywords": [
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts",
        "Svelte",
        "Solid",
        "React",
        "Vue",
        "WebComponent",
        "Malina"
    ],
    "author": {
        "name": "Valexr",
        "email": "valexr@gmail.com",
        "url": "https://valexr.github.io"
    },
    "contributors": [
        {
            "name": "Artemiy Schukin",
            "url": "https://github.com/yhdgms1"
        },
        {
            "name": "Eric Rovell",
            "url": "https://github.com/EricRovell"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/Slidy",
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off"
        }
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 100,
        "singleQuote": true
    },
    "devDependencies": {
        "@types/eslint": "^8.56.10",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.12.0",
        "@typescript-eslint/parser": "^7.12.0",
        "esbuild": "^0.21.4",
        "eslint": "^8.57.0",
        "open-props": "^1.7.4",
        "prettier": "^3.3.1",
        "typescript": "^5.4.5"
    }
}