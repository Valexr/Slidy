{
    "compilerOptions": {
        "baseUrl": "./packages",
        "paths": {
            "@slidy/core": [
                "core/src"
            ],
            "@slidy/react": [
                "react/src"
            ],
            "@slidy/svelte": [
                "svelte/src"
            ],
            "@slidy/malina": [
                "malina/src"
            ],
            "@slidy/wc": [
                "wc/src"
            ],
            "@slidy/vue": [
                "vue/src"
            ],
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [],
    "exclude": [
        "node_modules/*",
    ]
}