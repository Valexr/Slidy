{
    "compilerOptions": {
        "baseUrl": "./packages",
        "paths": {
            "@slidy/animation": ["animation/src"],
            "@slidy/core": ["core/src"],
            "@slidy/easing": ["easing/src"],
            "@slidy/react": ["react/src"],
            "@slidy/svelte": ["svelte/src"],
            "@slidy/malina": ["malina/src"],
            "@slidy/wc": ["wc/src"],
            "@slidy/vue": ["vue/src"],
            "@slidy/media": ["media/src"]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "moduleResolution": "Node",
        "lib": ["DOM", "ESNext", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    // "include": [],
    "exclude": ["node_modules/*"]
}
