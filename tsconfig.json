{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "moduleResolution": "Node",
        "lib": ["DOM", "ESNext", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules/*"]
}
