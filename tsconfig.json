{
    "compilerOptions": {
        "baseUrl": "./packages",
        "paths": {
            "@slidy/core": [
                "core/src"
            ],
            "@slidy/react": [
                "react/src"
            ],
            "@slidy/svelte": [
                "svelte/src"
            ]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "www/src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "www/public/*"
    ]
}