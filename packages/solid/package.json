{
    "name": "@slidy/solid",
    "version": "1.0.0",
    "description": "Simple, configurable & reusable carousel component built with SolidJS",
    "main": "dist/slidy.cjs",
    "module": "dist/slidy.mjs",
    "browser": "dist/slidy.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist/*"
    ],
    "exports": {
        ".": {
            "import": "./dist/slidy.mjs",
            "module": "./dist/slidy.mjs",
            "require": "./dist/slidy.cjs",
            "browser": "./dist/slidy.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "dev": "node esbuild --dev",
        "build": "rm -rf dist && node esbuild && tsc --emitDeclarationOnly --outDir dist",
        "build:local": "pnpm build -r --filter=@slidy/react...",
        "format": "prettier --write '**/*.{ts,tsx,md,svelte,json,html,css}'",
        "pub": "pnpm build && pnpm publish --no-git-checks --access public"
    },
    "keywords": [
        "Solid",
        "SolidJs",
        "Carousel",
        "Solid-plugin"
    ],
    "author": "EricRovell",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/slidy",
    "dependencies": {
        "solid-js": "^1.3.15"
    },
    "devDependencies": {
        "@slidy/core": "workspace:*",
        "esbuild-plugin-solid": "^0.4.2"
    }
}