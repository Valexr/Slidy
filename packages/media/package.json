{
    "name": "@slidy/media",
    "version": "1.2.6",
    "description": "Simple, observable & cookie-persisted media-query store",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "dev": "node esbuild --dev",
        "dev:core": "node esbuild --dev",
        "build": "rm -rf dist && node esbuild && tsc",
        "lint": "eslint './src/**/*.{js,ts}'",
        "lint:fix": "eslint --fix './src/**/*.{js,ts}'",
        "prelint": "pnpm run format",
        "pub": "pnpm build && pnpm publish --no-git-checks --access public",
        "format": "prettier --ignore-path ../../.gitignore --write './src/**/*.{js,ts,md,json,html,css}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Slidy",
        "Media",
        "Storage",
        "Browser",
        "mediaStorage",
        "localStorage",
        "sessionStorage",
        "Script",
        "Js",
        "Ts"
    ],
    "author": {
        "name": "Valexr",
        "email": "valexr@gmail.com",
        "url": "https://github.com/Valexr"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/Slidy/issues"
    },
    "homepage": "https://github.com/Valexr/Slidy/tree/master/packages/media"
}