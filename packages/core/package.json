{
    "name": "@slidy/core",
    "version": "3.0.5",
    "description": "Simple, configurable & reusable sliding action script",
    "main": "dist/slidy.cjs",
    "module": "dist/slidy.mjs",
    "browser": "dist/slidy.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist/*"
    ],
    "exports": {
        ".": {
            "import": "./dist/slidy.mjs",
            "module": "./dist/slidy.mjs",
            "require": "./dist/slidy.cjs",
            "browser": "./dist/slidy.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "dev": "node esbuild --dev",
        "dev:core": "node esbuild --core",
        "dev:svelte": "node esbuild --dev",
        "dev:react": "node esbuild --dev",
        "build": "rm -rf dist && node esbuild && tsc --emitDeclarationOnly --outDir dist",
        "lint": "eslint './src/**/*.{js,ts}'",
        "lint:fix": "eslint --fix './src/**/*.{js,ts}'",
        "prelint": "pnpm run format",
        "pub": "pnpm build && pnpm publish --no-git-checks --access public",
        "format": "prettier --ignore-path ../../.gitignore --write '**/*.{js,ts,md,json,html,css}'"
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0
        }
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": true,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Valexr/slidy.git"
    },
    "keywords": [
        "Slidy",
        "Slider",
        "Carousel",
        "Action",
        "Script",
        "Js",
        "Ts"
    ],
    "author": "Valexr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Valexr/slidy/issues"
    },
    "homepage": "https://valexr.github.io/slidy",
    "devDependencies": {
        "@types/eslint": "^8.4.1",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "derver": "^0.5.3",
        "esbuild": "^0.14.25",
        "eslint": "^8.10.0",
        "tslib": "^2.3.1",
        "typescript": "^4.6.2"
    }
}
